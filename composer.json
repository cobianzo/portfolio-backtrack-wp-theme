{
	"name": "alvaroblancocobian/portfolio-theme",
	"description": "A simplified fork of twentytwentyfive ready for developers",
	"type": "wordpress-theme",
	"authors": [
		{
			"name": "Cobianzo"
		}
	],
	"require": {
		"php": ">=8.2"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"squizlabs/php_codesniffer": "^3.11",
		"wp-coding-standards/wpcs": "^3.1",
		"phpstan/phpstan": "^1.10",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"automattic/vipwpcs": "^3.0"
	},
	"scripts": {
		"lint": "./vendor/bin/phpcs -p -s --standard=phpcs.xml ",
		"format": "./vendor/bin/phpcbf -p --standard=phpcs.xml ",
		"analyze": "./vendor/bin/phpstan analyze --memory-limit=512M",
		"test": "phpunit"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
